<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="default" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="threshold" value="WARN"/>
        <param name="File" value="dart.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>

   <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c %x - %m%n"/>
        </layout>
    </appender>

    <logger name="de">
        <level value="WARN"/>
        <!--<level value="INFO"/>-->
    </logger>

    <logger name="org.hibernate">
        <level value="WARN"/>
        <!--<level value="INFO"/>-->
    </logger>

    <logger name="net.sf">
        <level value="WARN"/>
    </logger>

    <!-- loggt SQL statements -->
    <logger name="org.hibernate.SQL">
        <level value="WARN"/>
        <!--<level value="INFO"/>-->
    </logger>

    <!-- loggt commit/rollback -->
    <logger name="org.hibernate.jdbc.JDBCContext">
        <level value="WARN"/>
    </logger>

    <logger name="de.liga.dart.database.AutoMigratorImpl">
        <level value="INFO"/>
    </logger>

    <!-- root logger -->
    <root>
        <!--<level value="DEBUG"/>-->
        <level value="WARN"/>
        <appender-ref ref="default"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>